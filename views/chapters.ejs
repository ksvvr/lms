<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chapter</title>
    <%- include('insideHead') %>
</head>
<body class="text-center">
    <%- include('navbar.ejs', { request: request }) %>
    <hr class="mt-4">
    <h1 class="font-bold text-xl">Pages</h1>
    <hr>
    <%- include('notifications') %>
    <table class="mx-auto">
        <tr>
            <th>
                P.No
            </th>
            <th>
                Page
            </th>
        </tr>
        <% for(var i=0; i < pages.length ;i++){ %> 
            <tr class="bg-sky-300 border hover:bg-sky-400" onclick="window.open('/pages/<%= pages[i].id %>?courseId=<%= courseId %>', '_blank');" style="cursor: pointer;">
                <td>
                    <%= pages[i].id %>
                </td>
                <td>
                    <%= pages[i].title %>
                </td>
            </tr>
        <% } %>
    </table>
    <p class="mt-2"><a href="javascript:void(0);" onclick="window.close();" class="bg-lime-300 hover:bg-lime-400">Close Tab</a></p>
</body>
</html>