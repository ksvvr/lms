<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chapter</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="text-center">
    <br>
    <a href="/signout" class="bg-lime-300">Signout</a>
    <a href="/dashboard" class="bg-lime-300">Home</a>
    <a href="/mycourses" class="bg-lime-300">My Courses</a>
    <!--p onclick="window.open('/chapters/<%= chapterId %>', '_self');"><a>Back to Chapters</a></p-->
    <hr class="mt-4">
    <h1 class="font-bold text-xl">Pages</h1>
    <hr>
    <%- include('notifications') %>
    <table class="mx-auto">
        <tr>
            <th>
                P.No
            </th>
            <th>
                Page
            </th>
        </tr>
        <% for(var i=0; i < pages.length ;i++){ %> 
            <tr onclick="window.open('/pages/<%= pages[i].id %>?courseId=<%= courseId %>', '_blank');" style="cursor: pointer;">
                <td>
                    <%= pages[i].id %>
                </td>
                <td>
                    <%= pages[i].title %>
                </td>
            </tr>
        <% } %>
    </table>
    <p class="mt-2"><a href="javascript:void(0);" onclick="window.close();" class="bg-lime-300">Close Tab</a></p>
</body>
</html>