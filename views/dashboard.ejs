<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('insideHead') %>
</head>

<body class="text-center">
    <%- include('header.ejs') %>
        <a href="/signout" class="bg-lime-300 hover:bg-lime-400">Signout</a>
        <a href="/changepassword" class="bg-lime-300 hover:bg-lime-400">Change Password</a>
        <a href="/educator/reports" class="bg-lime-300 hover:bg-lime-400" target="_self">Educator Reports</a>
        <h1 class="text-xl font-bold">Welcome! <%= userDetail %>
        </h1>
        <hr>
        <h1>Add Course Here...</h1>
        <form action="/addCourse" method="post">
            <input class="border-2 ml-2" type="text" placeholder="Course Name" name="name" required>
            <input class="border-2 ml-2" type="text" placeholder="Description" name="description" required>
            <button class="bg-lime-300 hover:bg-lime-400 ml-2" type="submit">Add</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        <%- include('notifications') %>
        <hr class="mt-2">
        <h1 class="font-bold">Courses created by you...</h1>
        <table class="mx-auto">
            <tr>
                <th>
                    Course.No
                </th>
                <th>
                    Course Name
                </th>
            </tr>
            <% for(var i=0; i < courses.length ;i++){ %>
                <tr class="bg-sky-300 border hover:bg-sky-400" onclick="window.open('/course/<%= courses[i].id %>', '_blank');" style="cursor: pointer;">
                    <td>
                      <%= courses[i].id %>
                    </td>
                    <td class="group flex items-center">
                      <%= courses[i].name %>
                    </td>
                  </tr>                
            <% } %> 
        </table>
        <hr class="mt-2">
        <h1 class="font-bold">Courses Available on LMS</h1>
        <table class="mx-auto">
            <tr>
                <th>
                    Course.No
                </th>
                <th>
                    Course Name
                </th>
            </tr>
            <% for(var j=0; j < allCourses.length ;j++){ %>
                <tr class="bg-sky-300 border hover:bg-sky-400" onclick="window.open('/course/<%= allCourses[j].id %>', '_blank');" style="cursor: pointer;">
                    <td>
                      <%= allCourses[j].id %>
                    </td>
                    <td class="group flex items-center">
                      <%= allCourses[j].name %>
                    </td>
                  </tr>                
            <% } %> 
        </table>

</body>

</html>